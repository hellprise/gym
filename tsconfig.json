{
	"compilerOptions": {
		"target": "es5",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			// "@/*": [
			// 	"./src/*",
			// ],
			// "@/ui/*": [
			// 	"./src/components/ui/*",
			// ],
			// "@/screens/*": [
			// 	"./src/components/screens/*",
			// ],
			// "@/auth/*": [
			// 	"./src/components/auth/*",
			// ],
			"@/components/*": [
				"./src/components/*",
			],
			"@/core": [
				"./src/core",
			],
			"@/hooks": [
				"./src/hooks",
			],
			"@/providers": [
				"./src/providers",
			],
			"@/services": [
				"./src/services",
			],
			"@/store": [
				"./src/store",
			],
			"@/types": [
				"./src/types",
			],
			"@/utils": [
				"./src/utils",
			],
		}
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}